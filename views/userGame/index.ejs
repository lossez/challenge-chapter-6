<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Usergame</title>
    <%- include('../partial/head'); %>
  </head>
  <body>
    <%- include('../partial/nav'); %>
    <div class="container mt-4">
      <div class="row">
        <div class="col-lg-10 col-md-6 mx-auto">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-md-10">
                  <h1>Data User Game</h1>
                </div>
                <div class="col mt-2">
                  <a href="/view/usergame/new" class="btn btn-primary"
                    >Create</a
                  >
                </div>
              </div>
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>Username</th>
                    <th>Fullname</th>
                    <th>Gender</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% result.forEach(function(user, i) { %>
                  <tr>
                    <td><%= ++i %></td>
                    <td><%= user.username %></td>
                    <td>
                      <%= user.user_game_biodata.first_name + " " +
                      user.user_game_biodata.last_name %>
                    </td>
                    <td><%= user.user_game_biodata.gender %></td>

                    <td>
                      <a
                        class="btn btn-outline-primary"
                        href="/view/usergame/<%= user.id %>"
                        >Details</a
                      >
                      <a
                        class="btn btn-outline-warning"
                        href="/view/usergame/<%= user.id %>/edit"
                        >Edit</a
                      >
                      <button
                        class="btn btn-outline-danger"
                        onclick="deleteUser('<%= user.id %>')"
                      >
                        Delete
                      </button>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

<script>
  function deleteUser(id) {
    let result = confirm("Are you sure want to delete this user?");
    if (result) {
      fetch("/api/usergame/" + id, {
        method: "DELETE",
      }).then((res) => {
        if (res.ok) {
          window.location.href = "/view/usergame";
        }
      });
    }
  }
</script>
