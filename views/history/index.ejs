<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Usergame</title>
    <%- include('../partial/head'); %>
  </head>
  <body>
    <%- include('../partial/nav'); %>
    <div class="container mt-4">
      <div class="row">
        <div class="col-lg-10 col-md-6 mx-auto">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-md-10">
                  <h1>Data User Game History</h1>
                </div>
                <div class="col mt-2">
                  <a href="/view/history/new" class="btn btn-primary">Create</a>
                </div>
              </div>
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th class="text-center">No</th>
                    <th>Name</th>
                    <th>User ID</th>
                    <th>score</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% result.forEach((item, i) => { %>
                  <tr>
                    <td class="text-center"><%= i+1 %></td>
                    <td>
                      <%= item.user_game.user_game_biodata.first_name + " " +
                      item.user_game.user_game_biodata.last_name %>
                    </td>
                    <td><%= item.user_id %></td>
                    <td><%= item.score %></td>
                    <td>
                      <a
                        class="btn btn-outline-primary"
                        href="/view/history/<%= item.id %>"
                        >Details</a
                      >
                      <a
                        class="btn btn-outline-warning"
                        href="/view/history/<%= item.id %>/edit"
                        >Edit</a
                      >

                      <button
                        onclick="deleteUser('<%= item.id %>')"
                        class="btn btn-outline-danger"
                      >
                        Delete
                      </button>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

<script>
  function deleteUser(id) {
    if (confirm("Are you sure?")) {
      fetch("/api/history/" + id, {
        method: "DELETE",
      }).then((res) => {
        if (res.status === 200) {
          window.location.reload();
        }
      });
    }
  }
</script>
